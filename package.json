{
  "name": "tailwindcss-utils",
  "version": "1.0.1",
  "description": "Tailwind v4 utility library for Ionic and Angular Material components.",
  "author": "Mohamed Ben Makhlouf <med.b.makhlouf@gmail.com>",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "build:ionic": "npx @tailwindcss/cli -i demo-ionic.css -o ./dist/ionic-utils.css --minify",
    "build:material": "npx @tailwindcss/cli -i demo-material.css -o ./dist/material-utils.css --minify",
    "publish:public": "npm publish --access public",
    "publish:alpha": "npm version prerelease --preid=alpha && npm publish --tag alpha --access public",
    "publish:beta": "npm version prerelease --preid=beta && npm publish --tag beta --access public",
    "publish:stable": "npm version patch && npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/medbenmakhlouf/tailwind-ionic.git"
  },
  "devDependencies": {
    "@angular/cdk": "^20.2.12",
    "@angular/forms": "^20.0.0 || ^21.0.0",
    "@angular/material": "^20.2.12",
    "@angular/build": "^20.3.9",
    "@angular/cli": "^20.3.9",
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/compiler-cli": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@tailwindcss/cli": "^4.1.0",
    "@tailwindcss/postcss": "^4.1.17",
    "rxjs": "~7.8.0",
    "tailwindcss": "^4.1.0",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "peerDependencies": {
    "tailwindcss": "^4.0.0"
  },
  "files": [
    "angular-material/",
    "ionic/"
  ],
  "keywords": [
    "tailwind",
    "ionic",
    "angular",
    "material",
    "css",
    "utilities"
  ],
  "license": "MIT"
}
